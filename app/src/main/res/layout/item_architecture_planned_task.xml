<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:backgroundTint="#FFFFFF"
    android:elevation="3dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:fontFamily="@font/gilroy_semi_bold"
                android:text="Raximov Muxammadzohid Abdumuminovich"
                android:textColor="@color/purple_700"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/gilroy_semi_bold"
                android:gravity="end"
                android:text="N_34121787"
                android:textColor="@color/apt_title_color"
                android:textSize="14sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="7dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:fontFamily="@font/gilroy_medium"
                android:text="Центр государственных услуг Андижанского района"
                android:textColor="@color/apt_title_color"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />


            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_circle_add" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/full_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="gone">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_medium"
                android:text="Объектнинг номи:"
                android:textColor="@color/apt_title_color"
                android:textSize="13sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/objectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/info_margin_top"
                android:fontFamily="@font/gilroy_semi_bold"
                android:text="Ozuka yem saqlash omborxona bino inshoatlari"
                android:textColor="@color/apt_info_color"
                android:textSize="16sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gilroy_medium"
                android:text="Туман:"
                android:textColor="@color/apt_title_color"
                android:textSize="13sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/regionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/info_margin_top"
                android:fontFamily="@font/gilroy_semi_bold"
                android:text="Андижанский район"
                android:textColor="@color/apt_info_color"
                android:textSize="16sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gilroy_medium"
                android:text="Келиб тушган сана:"
                android:textColor="@color/apt_title_color"
                android:textSize="13sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/beganDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/info_margin_top"
                android:fontFamily="@font/gilroy_semi_bold"
                android:text="4.05.1776"
                android:textColor="@color/apt_info_color"
                android:textSize="16sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gilroy_medium"
                android:text="Якунланган сана:"
                android:textColor="@color/apt_title_color"
                android:textSize="13sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/endDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/info_margin_top"
                android:fontFamily="@font/gilroy_semi_bold"
                android:text="4.05.1776"
                android:textColor="@color/apt_info_color"
                android:textSize="16sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gilroy_medium"
                android:text="АРТни тасдиқлаш:"
                android:textColor="@color/apt_title_color"
                android:textSize="13sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/confirmAPT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/info_margin_top"
                android:fontFamily="@font/gilroy_semi_bold"
                android:text="Воқлвоқт лотвлсвот лқовтқлвот лво"
                android:textColor="@color/apt_info_color"
                android:textSize="16sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gilroy_medium"
                android:text="Ҳолат:"
                android:textColor="@color/apt_title_color"
                android:textSize="13sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/info_margin_top"
                android:fontFamily="@font/gilroy_semi_bold"
                android:text="Жараёнда"
                android:textColor="@color/apt_info_color"
                android:textSize="16sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gilroy_medium"
                android:text="Ижрочи мутахассис:"
                android:textColor="@color/apt_title_color"
                android:textSize="13sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/performerExpert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/info_margin_top"
                android:fontFamily="@font/gilroy_semi_bold"
                android:text="Ли Харви Освальд"
                android:textColor="@color/apt_info_color"
                android:textSize="16sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gilroy_medium"
                android:text="Муддат (кун):"
                android:textColor="@color/apt_title_color"
                android:textSize="13sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/info_margin_top"
                android:fontFamily="@font/gilroy_semi_bold"
                android:text="-- -- ----"
                android:textColor="@color/apt_info_color"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>